<%- include('partials/header') %>
<style> 
    input[type=text] {
      width: 130px;
      box-sizing: border-box;
      border: 2px solid #ccc;
      border-radius: 4px;
      font-size: 16px;
      background-color: white;
      background-image: url('searchicon.png');
      background-position: 10px 10px; 
      background-repeat: no-repeat;
      padding: 12px 20px 12px 40px;
      -webkit-transition: width 0.4s ease-in-out;
      transition: width 0.4s ease-in-out;
    }
    
    input[type=text]:focus {
      width: 100%;
    }
</style>
<script>
  var book= document.getElementsByName("search").values;
  $("input[name:'ser']").click(() => {
    $.ajax({
      url:"/getbooks/"+book,
      type:"GET",
      dataType:"json"
    })  
  });
</script>

<div style="width: 100%; height: 100em; padding: 3em; text-align: center; margin-top: 10rem;">
    <h1>Book Store</h1>
    
    <form style="align-self: center;">
      <input type="text" name="search" placeholder="Search..">
      <input type="submit" name="ser" placeholder="Show Books">
    </form>
</div>    
<%- include('partials/footer') %>